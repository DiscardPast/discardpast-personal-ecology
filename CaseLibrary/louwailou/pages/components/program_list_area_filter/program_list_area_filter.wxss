.program_list_filter_bg {
  width: 710rpx;
  height: 10000%;
  background-color: beige;
  position: absolute;
}

.program_list_filter{
  width: 100%;
  height: 400rpx;
  background-color: black;
}
.program_list_filter_right_scroll_view{
  width: 80%;
  height: 400rpx;
}

.program_list_filter_checkbox_scroll_view{
  width: 30%;
  height: 400rpx;
}



.program_list_filter_left_view{
  width: 20%;
  height: 100%;
  background-color: blue;
}

.program_list_filter_right_view{
  width: 100%;
  background-color: blueviolet;
}

.program_list_filter_right_item_area_view{
  justify-content: space-between;
}

.program_list_filter_right_item_detials_view{
  width: 100%;
  background-color: burlywood;
}

.program_list_filter_submit_view{
  width: 100%;
  background-color: brown;

}

.program_list_filter_submit_is_checked_view{
  width: 100%;
  height: 30%;
  background-color: gainsboro;
}

.program_list_filter_submit_is_checked_text{
  font-size: 20rpx;
}

.program_list_filter_submit_button_view{
  width: 100%;
  height: 70%;
  background-color: honeydew;
}

.program_list_filter_submit_button_cancle_view {
  width: 50%;
  height: 100%;
  background-color: brown;
}

.program_list_filter_submit_button_confirm_view {
  width: 50%;
  height: 100%;
  background-color: yellow;
}