/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  margin: 10rpx;
  font-size: 24rpx;
  background-color: #fafafa;
} 

.view_center_row {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.view_center_column {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.scroll_view_vertical {
  height: 1060rpx;
  width: 100%;
}

.scroll_view_horizontal{
  height: 220rpx;
  width: 710rpx;
}
